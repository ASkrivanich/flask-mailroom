{% extends 'base.jinja2' %}

{% block subtitle %}Create A Donation{% endblock subtitle %}

{% block content %}
    <p>Enter first then last name and amount (no $ sign).</p>
    <form action="{{ url_for('submit') }}" method="POST">
        <label for= "name"> Donor Name: </label><input type="text" id="name" name="name">
        <br><br>
        <label for= "amount"> Donation Amount: </label><input type="number" id="donation" name="amount" min="0">
        <br>
        <input type="submit" value="Submit Donation">
    </form>
{% endblock content %}
